.cell-content {
    width: 690rpx;
    height: 250rpx;
    box-shadow: 0rpx 3rpx 20rpx 0rpx rgba(0, 0, 0, 0.33);
    border-radius: 14px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.cell-left {
    width: 74rpx;
    height: 168rpx;
    font-size: 120rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    opacity: 0.16;
    margin: -50rpx 0 0 -11rpx;
}

.card-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100%;
}

.author-avatar-img {
    width:136rpx;
    height:136rpx;
    border:2rpx solid rgba(255,255,255,1);
    overflow: hidden;
    border-radius: 50%;
}

.author-avatar {
    width:136rpx;
    height:136rpx;
    overflow: hidden;
    border-radius: 50%;
}

.cell-right {
    height: 100%;
    width: 470rpx;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    margin-left: 19rpx;
}

.cell-title {
    font-size: 36rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
    color: rgba(255, 255, 255, 1);
    margin: 0 0 20rpx 0;
    width: 100%;
}

.cell-total {
    width: 100%;
    height: 78rpx;
    background: rgba(255, 255, 255, 1);
    border-bottom-left-radius: 39rpx;
    border-top-left-radius: 39rpx;
    padding: 15rpx 0 15rpx 26rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.cell-total-title {
    font-size: 32rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 600;
}

.cell-total-right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.arrow {
    color: rgb(194, 191, 192);
}