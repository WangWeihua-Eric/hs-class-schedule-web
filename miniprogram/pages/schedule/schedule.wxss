.banner {
    height: 220rpx;
    width: 100%;
    position: relative;
}

.banner-img {
    width: 100%;
    height: 220rpx;
}

.banner-des {
    position: absolute;
    top: 0;
    height: 220rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.banner-des-img {
    width: 521rpx;
    height: 77rpx;
    margin-top: 47rpx;
}

.banner-time {
    font-size: 36rpx;
    font-family: PingFangSC-Semibold, PingFang SC;
    font-weight: 600;
    color: rgba(205, 75, 75, 1);
}

.cell {
    display: flex;
    flex-direction: column;
    padding: 100rpx 23rpx 0 23rpx;
    box-sizing: border-box;
}

.cell-header {
    position: relative;
}

.cell-header-item {
    position: absolute;
    width: 750rpx;
    left: -32rpx;
    background: rgba(247, 240, 240, 1);
    padding: 19rpx 23rpx;
    box-sizing: border-box;
}

.cell-title {
    font-size: 36rpx;
    font-family: SourceHanSansCN-Medium, SourceHanSansCN;
    font-weight: 500;
    color: rgba(119, 35, 35, 1);
}

.cell-sub-title {
    font-size:30rpx;
    font-family:SourceHanSansCN-Normal,SourceHanSansCN;
    color:rgba(119,35,35,1);
    margin-left: 60rpx;
}

.cell-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 50rpx 0;
}

.item-tag-time {
    display: flex;
    justify-content: flex-start;
    align-items: center;
}

.tag {
    width:99rpx;
    height:36rpx;
    background-color:rgba(248,97,97,1);
    border-radius:8px;
    font-size:30rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    display: flex;
    justify-content: center;
    align-items: center;
}

.item-time {
    font-size:30rpx;
    font-family:PingFangSC-Semibold,PingFang SC;
    font-weight:600;
    color:rgba(72,72,72,1);
    margin-left: 17rpx;
}

.item-title {
    font-size:36rpx;
    font-family:SourceHanSansCN-Heavy,SourceHanSansCN;
    font-weight:800;
    color:rgba(65,65,65,1);
    margin-top: 19rpx;
}

.item-teacher {
    font-size:26rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(120,120,120,1);
    margin-top: 24rpx;
}

.cell-item-right {
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.booking-btn {
    width:180rpx;
    height:73rpx;
    background:rgba(205,75,75,1);
    border-radius:37px;
    margin-right: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size:36rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
}

.share-info {
    width:100%;
    height:242rpx;
    background:linear-gradient(180deg,rgba(255,255,255,0) 0%,rgba(255,255,255,0.81) 41%,rgba(255,255,255,1) 100%);
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
}

.share-btn {
    width:390rpx;
    height:107rpx;
    background:linear-gradient(180deg,rgba(116,206,116,1) 0%,rgba(25,173,25,1) 100%);
    box-shadow:0px 10px 10px 0px rgba(84,195,84,0.38);
    border-radius:54px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.wxlogo-img {
    width: 56rpx;
    height: 46rpx;
}

.share-text {
    font-size:40rpx;
    font-family:SourceHanSansCN-Heavy,SourceHanSansCN;
    font-weight:800;
    color:rgba(255,255,255,1);
    text-shadow:0px 10px 10px rgba(84,195,84,0.38);
    margin-left: 27rpx;
}