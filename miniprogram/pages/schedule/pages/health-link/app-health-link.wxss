@import '../../../../style/flex-base.wxss'

.content {
    width: 100%;
    height: 100%;
}

.header {
    width: 100%;
    position: relative;
}

.header-img {
    width: 476rpx;
    height: 234rpx;
}

.header-text {
    position: absolute;
    left: 43rpx;
    bottom: 46rpx;
}

.text-info {
    font-size:42rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(84,92,106,1);
}

.header-line {
    margin: 12rpx 0 0 3rpx;
    width:158rpx;
    height:7rpx;
    background:rgba(88,155,173,1);
    border-radius:4rpx;
    opacity:0.26;
}

.card-list {
    box-sizing: border-box;
    padding: 0 40rpx;
}

.card-item {
    margin-bottom: 40rpx;
}