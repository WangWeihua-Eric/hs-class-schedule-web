@import '../../../../../style/flex-base.wxss'

.card-content {
    width: 670rpx;
    height: 410rpx;
    border-radius: 10rpx;
    position: relative;
    overflow: hidden;
}

.card-img {
    width: 670rpx;
    height: 410rpx;
    border-radius: 10rpx;
}

.card-info {
    width: 670rpx;
    height: 410rpx;
    border-radius: 10rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.card-tag {
    width: 80rpx;
    height: 36rpx;
}

.card-text-info {
    width: 100%;
    height: 82rpx;
    background:rgba(0,0,0,0.69);
    filter:blur(0rpx);
    font-size:32rpx;
    font-family:PingFangSC-Regular,PingFang SC;
    color:rgba(255,255,255,1);
    text-shadow:0rpx 2rpx 4rpx rgba(0,0,0,0.5);
    box-sizing: border-box;
    padding: 0 20rpx;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}

.card-in-play {
    width: 39rpx;
    height: 44rpx;
}

.card-text {
    margin-left: 10rpx;
}