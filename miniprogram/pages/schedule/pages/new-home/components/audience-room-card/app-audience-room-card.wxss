@import '../../../../../../style/flex-base.wxss'

.card-content {
    width:344rpx;
    border-radius: 10rpx;
    position: relative;
}

.card-info {
    width: 344rpx;
    height: 340rpx;
    border-radius: 10rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.lesson-tag {
    position: relative;
}

.card-bottom {
    width: 100%;
    box-sizing: border-box;
    padding: 14rpx 16rpx 14rpx 12rpx;
    background:linear-gradient(180deg,rgba(0,0,0,0) 0%,rgba(0,0,0, 0.71) 100%);
}

.user-img {
    width: 54rpx;
    height: 54rpx;
    border-radius: 50%;
    overflow: hidden;
}

.user-name {
    margin-left: 10rpx;
    font-size:24rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
}

.sub-tag {
    background:rgba(255,255,255, 0.7);
    border-radius:8rpx;
    margin-left: 6rpx;
    font-size:20rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(51,51,48,1);
    padding: 3rpx 10rpx;
    box-sizing: border-box;
}

.book-btn-img {
    width: 84rpx;
    height: 42rpx;
}

.book-tag {
    width: 270rpx;
    height: 42rpx;
}

.live-tag {
    width: 179rpx;
    height: 42rpx;
}

.book-tag-text {
    font-size:22rpx;
    font-family:SourceHanSansCN-Bold,SourceHanSansCN;
    font-weight:bold;
    color:rgba(255,255,255,1);
    position: absolute;
    left: 6rpx;
    top: 6rpx;
}

.room-pv {
    font-size:22rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    position: absolute;
    left: 114rpx;
    top: 0;
    height: 42rpx;
}

.room-img {
    width: 344rpx;
    height: 340rpx;
    border-radius: 10rpx;
}

.room-name {
    width: 100%;
    font-size:29rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(51,51,51,1);
    margin-left: 8rpx;
    margin-top: 14rpx;
}