<view>
    <swiper circular="{{true}}" next-margin="92rpx" previous-margin="92rpx">
        <swiper-item wx:for="{{swiperList}}" wx:for-item="item" wx:for-index="index" wx:key="index">
            <view class="swiper-content f-c-jc-as">
                <view class="card-header f-js-ac">
                    <image class="time-tag" lazy-load="{{true}}" src="cloud://hs-class-schedule-we-8wofx.6873-hs-class-schedule-we-8wofx-1301353511/time-tag.png"></image>
                    <view class="open-time">{{item.openTime}}</view>
                </view>
                <view class="img-content">
                    <image class="lesson-img" lazy-load="{{true}}" src="{{item.roomCoverImg}}"></image>
                    <view class="lesson-tag">
                        <image class="in-live-tag" lazy-load="{{true}}" src="{{item.roomStatus === 0 ? '' : item.roomStatus === 3 ? 'cloud://hs-class-schedule-we-8wofx.6873-hs-class-schedule-we-8wofx-1301353511/re-look.png' : 'cloud://hs-class-schedule-we-8wofx.6873-hs-class-schedule-we-8wofx-1301353511/in-live.png'}}"></image>
                        <view wx:if="{{item.roomStatus !== 0}}" class="room-pv f-jc-ac">{{item.pv}}</view>
                    </view>
                </view>
            </view>
        </swiper-item>
    </swiper>
</view>