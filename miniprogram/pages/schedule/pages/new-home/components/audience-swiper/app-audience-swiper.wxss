@import '../../../../../../style/flex-base.wxss'

swiper {
    width: 100%;
    height: 409rpx;
}

swiper image {
    width: 100%;
    height: 432rpx;
}

.swiper-content {
    width: 100%;
    height: 409rpx;
    padding: 21rpx 10rpx;
    box-sizing: border-box;
}

.card-header{
    width: 100%;
    margin-bottom: 23rpx;
}

.time-tag {
    width: 22rpx;
    height: 22rpx;
}

.open-time {
    font-size:30rpx;
    font-family:PingFangSC-Medium,PingFang SC;
    font-weight:500;
    color:rgba(0,0,0,1);
    margin-left: 11rpx;
}

.line {
    width: 344rpx;
    overflow: hidden;
    white-space: nowrap;
    margin-left: 17rpx;
    color: #979797;
    font-size: 20rpx;
}

.book-tag {
    width: 270rpx;
    height: 42rpx;
}

.live-tag {
    width: 179rpx;
    height: 42rpx;
}

.img-content {
    position: relative;
}

.lesson-tag {
    position: absolute;
    top: 0;
    left: 0;
}

.book-btn-img {
    width: 84rpx;
    height: 42rpx;
    position: absolute;
    bottom: 25rpx;
    right: 16rpx;
}

.in-live-tag {
    width: 179rpx;
    height: 42rpx;
}

.book-tag-text {
    font-size:22rpx;
    font-family:SourceHanSansCN-Bold,SourceHanSansCN;
    font-weight:bold;
    color:rgba(255,255,255,1);
    position: absolute;
    left: 6rpx;
    top: 6rpx;
}

.room-pv {
    font-size:22rpx;
    font-family:SourceHanSansCN-Medium,SourceHanSansCN;
    font-weight:500;
    color:rgba(255,255,255,1);
    position: absolute;
    left: 114rpx;
    top: 0;
    height: 42rpx;
}

.lesson-img {
    width: 536rpx;
    height: 300rpx;
    border-radius: 15rpx;
}